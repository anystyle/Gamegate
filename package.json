{
  "name": "gamegate",
  "version": "1.0.0",
  "description": "Lite stress-relief mini games platform - Play instantly, no-burden casual fun",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server.js",
    "dev:client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "webpack --mode production",
    "build:vercel": "vite build",
    "build:local": "webpack --mode production",
    "test": "jest",
    "lint": "eslint src/",
    "preview": "vite preview",
    "vercel-build": "vercel build"
  },
  "keywords": ["mini games", "casual games", "online games", "instant play", "stress relief games", "office games", "mini games aggregation", "web games"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "eslint": "^8.45.0",
    "concurrently": "^8.2.0",
    "vite": "^4.4.9",
    "@vitejs/plugin-legacy": "^4.1.1",
    "terser": "^5.19.2",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "vercel": {
    "buildCommand": "npm run build:vercel",
    "devCommand": "npm run dev",
    "functions": {
      "src/api/index.js": {
        "runtime": "nodejs18.x",
        "maxDuration": 10
      }
    }
  }
}