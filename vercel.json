{
  "version": 2,
  "name": "gamegate",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "functions": {
    "src/api/index.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10,
      "memory": 512
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/games/(.*)",
      "destination": "/games/$1"
    },
    {
      "source": "/index.html",
      "destination": "/index_en.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index_en.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, must-revalidate"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|mjs|json|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}